{
  "version": 2,
  "builds": [
    {
      "src": "EventHorizon/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles/$1"
    },
    {
      "src": "/media/(.*)",
      "continue": true
    },
    {
      "src": "/(.*)",
      "dest": "EventHorizon/wsgi.py"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "EventHorizon.settings"
  }
}
